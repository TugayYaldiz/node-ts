{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom", "esnext"],
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "pretty": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "paths": {
      "@config": ["config/index.ts"],
      "@conf": ["config/loadConfig.ts"],
      "@api/*": ["api/*"],
      "@models/*": ["models/*"],
      "@middleware": ["middleware/index.ts"],
      "@middleware/*": ["middleware/*"],
      "@types": ["types/index.ts"],
      "@helpers": ["helpers/index.ts"],
      "@test-helpers": ["test/test-helpers/index.ts"],
      "@server": ["server.ts"],
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
